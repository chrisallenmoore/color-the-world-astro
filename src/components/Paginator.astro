---
const { page } = Astro.props;
---

<div class="pagination">
  {
    page.url.prev && (
      <a
        class="bg-paradiso-600 p-2 rounded-xl text-white hover:no-underline hover:bg-paradiso-700"
        href={page.url.prev}
        title="Go to Previous"
      >
        &larr; Prev
      </a>
    )
  }
  {
    page.url.next && (
      <a
        class="bg-paradiso-600 p-2 rounded-xl text-white hover:no-underline hover:bg-paradiso-700"
        href={page.url.next}
        title="Go to Next"
      >
        Next &rarr;
      </a>
    )
  }
</div>

<style>
  .pagination a {
    display: inline-block;
    padding: 10px;
  }
</style>
