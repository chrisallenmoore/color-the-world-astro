---
import SEO from "@julian_cataldo/astro-seo/SEO.astro";
const { pageTitle, pageDescription, pageImage } = Astro.props;
---

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-4PJ5PGRSTS"
></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());

  gtag("config", "G-4PJ5PGRSTS");
</script>

<meta charset="utf-8" />
<link rel="icon" type="image/x-icon" href="/favicon.png" />
<meta name="viewport" content="width=device-width" />
<link
  rel="preconnect"
  href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
  rel="stylesheet"
/>

<SEO
  image={pageImage}
  title={pageTitle}
  description={pageDescription}
  siteName={"Color the World"}
/>
